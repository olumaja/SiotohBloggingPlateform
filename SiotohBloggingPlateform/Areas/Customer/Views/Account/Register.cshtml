@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="height:90vh">
    <div class="border rounded col-4 pt-4 pb-4">
        <h1 class="mb-3 text-center" style="text-align:center">Register here!</h1>
        
        <form method="post" asp-area="Customer" asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-4">
                <div><label asp-for=Name>Name</label></div>
                <div><input asp-for=Name placeholder="Name" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Email>Email</label></div>
                <div><input asp-for=Email placeholder="Email" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Password>Password</label></div>
                <div><input asp-for=Password placeholder="Password" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=ConfirmPassword>Confirm Password</label></div>
                <div><input asp-for=ConfirmPassword placeholder="Confirm Password" class="form-control" /></div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <hr />
            <partial name="_LoginLogoutPartialView" />
            <div class="m-auto" style="width:30%"><input type="submit" value="Register" class="btn btn-primary btn-lg form-control" /></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
