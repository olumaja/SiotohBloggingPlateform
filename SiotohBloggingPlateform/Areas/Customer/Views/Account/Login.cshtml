@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login";
    var returnUrl = !String.IsNullOrWhiteSpace(ViewBag.ReturnUrl) ? ViewBag.ReturnUrl : "/";
}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">
    <div class="border rounded col-4 pt-4 pb-4">
        <h1 class="mb-3 text-center" style="text-align:center">Login here!</h1>
        <form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl = "@returnUrl" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-4">
                <div><label asp-for=Email>Email</label></div>
                <div><input asp-for=Email placeholder="Email" class="form-control" /></div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group m-4">
                <div><label asp-for=Password>Password</label></div>
                <div><input asp-for=Password placeholder="Password" class="form-control" /></div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center m-4">
                <div class="d-flex">
                    <div><input asp-for=RememberMe /></div>
                    <div><label asp-for=RememberMe>Remember me</label></div>
                </div>
                <div>
                    <small><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a></small>
                </div>
            </div>
            <hr />
            <partial name="_LoginLogoutPartialView" />
            <div class="m-auto" style="width:30%"><input type="submit" value="Login" class="btn btn-primary btn-lg form-control" /></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
